    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GUI",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}\\client",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch & Debug API",
            "runtimeVersion": "22.4.0",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\server\\index.mjs",
            "envFile": "${workspaceFolder}\\server\\.env",
        }
    ]
}